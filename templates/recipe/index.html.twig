{% extends 'base.html.twig' %}

{% block title 'Recettes' %}

{% block body %}
    <h1>Recettes rapides</h1>
    <ul>
        {%  for recipe in shorts %}
            <li>
                <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a>
            </li>
        {%  endfor %}
    </ul>
    <h1>Liste des recettes</h1>
    <a class="btn btn-primary " href="{{ path('recipe.create') }}">Add</a>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {%  for recipe in recipes %}
                <tr>
                    <td>
                        <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a>
                    </td>
                    <td>
                        <div class="d-flex gap-1">
                            <a class="btn btn-primary btn-sm" href="{{ path('recipe.edit', {id: recipe.id}) }}">Edit</a>
                            <form action="{{ path('recipe.delete', {id: recipe.id}) }}" method="post">
                                <input type="hidden" name="_method" value="Delete">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {%  endfor %}
        </tbody>
    </table>
{% endblock %}
